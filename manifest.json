{
  "manifest_version": 3,
  "name": "视频时间戳和截图工具",
  "version": "1.0",
  "description": "获取视频时间戳链接和截图的Chrome扩展",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "commands",
    "notifications",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "get_timestamp": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "获取时间戳链接"
    },
    "get_screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "获取视频截图"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["screenshot.html", "screenshot.js"],
      "matches": ["<all_urls>"]
    }
  ]
}